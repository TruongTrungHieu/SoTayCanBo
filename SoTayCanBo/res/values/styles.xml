<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Theme Without ActionBar -->
    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- ACCOUNT LIGHT - FOR FRAGMENT -->
    <style name="AccountsLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimary</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- TRANSPARENT DIALOG THEME -->
    <style name="TransparentDialogTheme" parent="android:Theme.Dialog">

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- END - TRANSPARENT DIALOG THEME -->


    <!-- CUSTOM ACTION BAR THEME -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
    </style>
	<!-- END - CUSTOM ACTION BAR THEME -->
    
    <!-- NO SHADOW ACTION BAR -->
    <style name="NoShadowActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBarNoShadow</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBarNoShadow</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBarNoShadow" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
    </style>
    <!-- END - NO SHADOW ACTION BAR -->


    <!-- DIALOG NOTE ACTIVITY ANIMATION -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_note_slideup</item>
        <item name="android:windowExitAnimation">@anim/dialog_note_slidedown</item>
    </style>
    <!-- END - DIALOG NOTE ACTIVITY ANIMATION -->

</resources>