<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rlImgInfo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical" >

            <com.hou.ultis.CircularImageView
                android:id="@+id/imgAvatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="50"
                android:src="@drawable/account_ava" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDonvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserName"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/imgAvatar"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnInfomation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rlImgInfo"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/canbo_name"
                android:drawablePadding="30dp"
                android:focusable="false"
                android:inputType="text"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <EditText
                android:id="@+id/edtSdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/canbo_sdt"
                android:drawablePadding="30dp"
                android:focusable="false"
                android:inputType="phone"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/canbo_email"
                android:drawablePadding="30dp"
                android:focusable="false"
                android:inputType="textEmailAddress"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <EditText
                android:id="@+id/edtDiachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/canbo_home"
                android:drawablePadding="30dp"
                android:focusable="false"
                android:inputType="text"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>