<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2B628A" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#3269a3"
                android:endColor="#3269a3"
                android:angle="270" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
</selector>